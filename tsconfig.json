{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./src/core/*"],
      "@classic/*": ["./src/renderers/classic/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@state/*": ["./src/state/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@ui/*": ["./src/ui/*"],
      "@assets/*": ["./assets/*"]
    },
    "types": ["nativewind/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
